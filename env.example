# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/eprocurement

# Application Settings
PORT=3000
NODE_ENV=production

# Scraper Settings
LOG_LEVEL=info 

# Scheduler
# Enable/disable in-process scheduler
SCRAPE_SCHEDULER_ENABLED=true
# Cron expression (default: every 6 hours)
SCRAPE_CRON=0 */6 * * *
# Optional timezone for cron
SCRAPE_CRON_TZ=UTC
# Run a scrape immediately at boot
SCRAPE_ON_BOOT=true